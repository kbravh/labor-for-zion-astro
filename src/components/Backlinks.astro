---
import type {Backlink} from '../utils/mdUtils';
import HoverUnderline from './HoverUnderline.astro';

interface Props {
  backlinks: Backlink[];
}

const {backlinks} = Astro.props;
---

<div class="p-4">
  <h2 class="font-heading font-bold text-lg">Pages that reference this note:</h2>
  <ul class="flex flex-col gap-2 px-4 py-2">
    {
      backlinks.map(({title, slug, excerpt}) => (
        <li class="list-disc">
          <article>
            <HoverUnderline>
              <a href={`/notes/${slug}`}>
                <span>
                  <span class="font-semibold">{title}: </span>
                  {excerpt ? `"...${excerpt}..."` : ''}
                </span>
              </a>
            </HoverUnderline>
          </article>
        </li>
      ))
    }
  </ul>
</div>
