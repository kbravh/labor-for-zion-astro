---
interface Props {
  className?: string;
}

const {className} = Astro.props;
---

<span
  class:list={[
    'cursor-pointer transition-all motion-reduce:transition-none duration-300',
    'bg-left-bottom bg-gradient-to-br bg-hidden-link hover:bg-shown-link bg-no-repeat',
    'from-emerald-700 to-emerald-900 dark:from-emerald-500 dark:to-emerald-300',
    className,
  ]}
>
  <slot />
</span>
