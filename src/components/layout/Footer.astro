---
import Link from "../interaction/Link.astro";
import { getLocale } from "@utils/i18n/main";
import { translations } from "@utils/i18n/translations";

const locale = getLocale(Astro.currentLocale);
---

<footer class="text-slate-700 w-full py-5 text-center mt-5">
  <div class="flex flex-col max-w-lg mx-auto gap-5 text-balance">
    <blockquote
      class="text-sm"
      cite="https://www.churchofjesuschrist.org/study/scriptures/bofm/2-ne/26?&id=31#31"
    >
      <p class="mb-0 italic">
        {translations[locale].meta.theme1}<br />{
          translations[locale].meta.theme2
        }
      </p>
      <footer class="font-bold text-slate-500">
        <Link
          href="https://www.churchofjesuschrist.org/study/scriptures/bofm/2-ne/26?&id=31#31"
          target="_blank"
          rel="noreferrer"
        >
          {translations[locale].meta.themeReference}
        </Link>
      </footer>
    </blockquote>
    <p>Â© Karey Higuera {new Date().getFullYear()}</p>
  </div>
</footer>
